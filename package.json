{
  "name": "spaceSim",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "graceful-fs": "^4.1.11",
    "standard": "^10.0.3",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "worker-loader": "^0.8.1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "browser-bunyan": "^0.4.0",
    "kelvin-to-rgb": "^1.0.2",
    "msgpack-lite": "^0.1.26",
    "raw-loader": "^0.5.1",
    "socket.io": "^2.0.3",
    "three": "^0.87.1",
    "uuid": "^3.1.0"
  },
  "scripts": {
    "dev": "./node_modules/.bin/webpack-dev-server",
    "build": "./node_modules/.bin/webpack --progress --colors  --config webpack.config.prod.js",
    "clean": "rm -rf dist/"
  },
  "eslintConfig": {
    "extends": "standard",
    "globals": {
      "Void": true,
      "THREE": false,
      "OIMO": false,
      "postMessage": false,
      "self": true
    },
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "func-style": [
        2,
        "expression"
      ],
      "prefer-arrow-callback": [
        2,
        {
          "allowNamedFunctions": false
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
